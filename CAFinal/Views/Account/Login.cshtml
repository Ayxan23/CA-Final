@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<!-- Login Start -->
<div class="container">
    <section class="login">
        <div class="login_box">
            <div class="main_title">
                <h2 class="title_h2">Login</h2>
            </div>
            <form class="login_form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input class="login_input" asp-for="Username" placeholder=" Username" />
                <div><span asp-validation-for="Username" class="text-danger"></span></div>

                <input class="login_input" asp-for="Password" placeholder="Password" />
                <div><span asp-validation-for="Password" class="text-danger"></span></div>

                <div class="login_checkbox">
                    <input asp-for="RememberMe" />
                    <label for="RememberMe">Remember me</label>
                </div>

                <div class="login_link">
                    <a asp-action="ForgotPassword">Forgot password?</a>
                    <a asp-action="Register">Don't have an account?</a>
                </div>

                <div class="login_button">
                    <button type="submit">Log in</button>
                </div>
            </form>
        </div>
    </section>
</div>
<!-- Login End -->
