@model RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
}
<!-- Login Start -->
<div class="container">
    <section class="login">
        <div class="login_box">
            <div class="main_title">
                <h2 class="title_h2">Sign Up</h2>
            </div>
            <form class="login_form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input class="login_input" asp-for="Fullname" placeholder="Fullname">
                <div><span asp-validation-for="Fullname" class="text-danger"></span></div>

                <input class="login_input" asp-for="Username" placeholder=" Username">
                <div><span asp-validation-for="Username" class="text-danger"></span></div>

                <input class="login_input" asp-for="Email" placeholder=" Email">
                <div><span asp-validation-for="Email" class="text-danger"></span></div>

                <input class="login_input" asp-for="PhoneNumber" placeholder=" Phone Number">
                <div><span asp-validation-for="PhoneNumber" class="text-danger"></span></div>

                <input class="login_input" asp-for="Password" placeholder="Password">
                <div><span asp-validation-for="Password" class="text-danger"></span></div>

                <input class ="login_input" asp-for="ConfirmPassword" placeholder="Confirm Password">
                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>

                <div class="login_link">
                    <a asp-action="Login">Already have an account ?</a>
                </div>

                <div class="login_button">
                    <button type="submit">Sign Up</button>
                </div>
            </form>
        </div>
    </section>
</div>
<!-- Login End -->
