@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
<!-- Login Start -->
<div class="container">
    <section class="login">
        <div class="login_box">
            <div class="main_title">
                <h2 class="title_h2">Reset Password</h2>
            </div>
            <form class="login_form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input class="login_input" asp-for="Password" placeholder=" Password">
                <div><span asp-validation-for="Password" class="text-danger"></span></div>

                <input class="login_input" asp-for="ConfirmPassword" placeholder=" Confirm Password">
                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>

                <div class="login_button">
                    <button type="submit">Change Password</button>
                </div>
            </form>
        </div>
    </section>
</div>
<!-- Login End -->