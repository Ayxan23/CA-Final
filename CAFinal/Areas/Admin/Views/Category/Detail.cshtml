@model Category
@{
    ViewData["Title"] = "Category Detail";
}
<div class="info_box">
    <div style="width:400px; height:auto">
        <img src="~/assets/img/@Model.Image" style="width:100%; max-height: auto" />
    </div>
    <div style="color: dimgray;">
        <h2>Name: @Model.Name</h2>
    </div>
    <div style="list-style:none; color: dodgerblue; display:flex; gap:5px; align-items: center">
        <h3>Products:</h3>
        @foreach (var item in Model.ProductCategories)
        {
            <h4>@item.Product.Name;</h4>
        }
    </div>

    <div style="display: flex; gap: 15px">
        <a class="btn btn-info" asp-action="Index">Go Back</a>
    </div>
</div>