@model List<Service>
@{
    ViewData["Title"] = "Service";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Service</h4>
                    <div class="table-responsive">
                        <a class="btn btn-primary @(ViewBag.Count == 4 ? "disabled" : "")" asp-action="Create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Icon</th>

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model)
                                {
                                    <tr>
                                        <td>@service.Title</td>
                                        <td>@service.Icon</td>
                                        <td class="button_box">
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@service.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id=@service.Id>Update</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id=@service.Id>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

