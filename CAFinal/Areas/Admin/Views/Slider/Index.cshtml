@model List<Slider>
@{
    ViewData["Title"] = "Slider";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider</h4>
                    <div class="table-responsive">
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Title</th>

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/img/@slider.Image" />
                                        </td>
                                        <td>@slider.Title</td>
                                        <td class="button_box">
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id=@slider.Id>Update</a>
                                            <a class="btn btn-danger @(ViewBag.Count == 1 ? "disabled" : "")" asp-action="Delete" asp-route-id=@slider.Id>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

