@model List<Product>
@{
    ViewData["Title"] = "Product";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product</h4>
                    <div class="table-responsive">
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price</th>

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/img/@product.Image" />
                                        </td>
                                        <td>@product.Name</td>
                                        <td>@product.Price $</td>
                                        <td>
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@product.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id=@product.Id>Update</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id=@product.Id>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
